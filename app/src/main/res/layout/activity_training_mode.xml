<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modo Entrenamiento"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Configuración de Tiempo Total -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duración del Entrenamiento"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="center">

                    <!-- Horas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Horas"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"/>

                        <NumberPicker
                            android:id="@+id/npTrainingHours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <!-- Minutos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minutos"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"/>

                        <NumberPicker
                            android:id="@+id/npTrainingMinutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvTotalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duración total: 10 minutos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background="#E8F5E8"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Configuración de Intervalos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Intervalos de Medición"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <Spinner
                    android:id="@+id/spinnerInterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"/>

                <TextView
                    android:id="@+id/tvIntervalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Se medirá: Velocidad y Distancia cada 1 minuto"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:background="#E3F2FD"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Métricas a Medir -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Métricas a Medir"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/cbSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Velocidad promedio (km/h)"
                    android:checked="true"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distancia recorrida"
                    android:checked="true"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbPace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ritmo (min/km)"
                    android:checked="true"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbCalories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calorías estimadas"
                    android:checked="false"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Resumen del Entrenamiento -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:backgroundTint="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resumen del Entrenamiento"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvTrainingSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duración: 10 min\nIntervalos: 1 min\nMétricas: Velocidad, Distancia, Ritmo"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botón de Inicio -->
        <Button
            android:id="@+id/btnStartTraining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comenzar Entrenamiento"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:backgroundTint="#FF9800"/>

    </LinearLayout>

</ScrollView>